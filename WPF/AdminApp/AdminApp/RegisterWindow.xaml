<Window x:Class="AdminApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Regisztráció" Height="300" Width="400" Background="#000">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Felhasználónév:" Foreground="White"/>
            <TextBox Name="UsernameTextBox" Margin="0,5,0,15"/>
            <TextBlock Text="Jelszó:" Foreground="White"/>
            <PasswordBox Name="PasswordBox" Margin="0,5,0,15"/>
            <Button Content="Regisztráció" Width="150" HorizontalAlignment="Center" Click="Register_Click" Background="#c841c6" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
