<Window x:Class="AdminApp.AdminEventsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Event Admin" Height="450" Width="800" Background="#000">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Eventek listája:" Foreground="White" FontSize="16" Margin="0,0,0,10"/>
            <ListBox Name="EventsListBox" Background="#222" Foreground="White" BorderBrush="#c841c6" BorderThickness="1" Height="300">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <CheckBox IsChecked="{Binding IsMarkedForDeletion}" Margin="5" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Margin="5"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Törlés" Width="100" Margin="5" Click="DeleteEvents_Click" Background="#c841c6" Foreground="White"/>
                <Button Content="Felhasználók" Width="100" Margin="5" Click="OpenUsersWindow_Click" Background="#c841c6" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
