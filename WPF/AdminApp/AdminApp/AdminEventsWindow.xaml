<Window x:Class="AdminApp.AdminEventsEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Eventek szerkesztése" Height="600" Width="1000" Background="#000">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">
            <TextBlock Text="Eventek módosítása:" Foreground="White" FontSize="16" Margin="0,0,0,10"/>
            <ListBox Name="EventsListBox" Background="#222" Foreground="White" BorderBrush="#c841c6" BorderThickness="1">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#c841c6" BorderThickness="1" Margin="5" Padding="5">
                            <StackPanel Orientation="Vertical">
                                <!-- Törlés jelölő checkbox -->
                                <CheckBox Content="Törlés" Foreground="White" IsChecked="{Binding IsMarkedForDeletion, Mode=TwoWay}" Margin="0,0,0,5"/>
                                <!-- Megjelenítjük az event ID-t -->
                                <TextBlock Text="Event ID:" Foreground="White" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Id}" Foreground="White" Margin="0,0,0,5"/>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="Start Date:" Foreground="White" Width="90"/>
                                    <DatePicker SelectedDate="{Binding StartDate, Mode=TwoWay}" Width="150"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="End Date:" Foreground="White" Width="90"/>
                                    <DatePicker SelectedDate="{Binding EndDate, Mode=TwoWay}" Width="150"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="Status:" Foreground="White" Width="90"/>
                                    <TextBox Text="{Binding Status, Mode=TwoWay}" Width="150"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="Guests:" Foreground="White" Width="90"/>
                                    <TextBox Text="{Binding GuestsString, Mode=TwoWay}" Width="80"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="Location:" Foreground="White" Width="90"/>
                                    <TextBox Text="{Binding LocationName, Mode=TwoWay}" Width="150"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="Theme:" Foreground="White" Width="90"/>
                                    <TextBox Text="{Binding Theme, Mode=TwoWay}" Width="150"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="Address:" Foreground="White" Width="90"/>
                                    <TextBox Text="{Binding Address, Mode=TwoWay}" Width="150"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="Equipment:" Foreground="White" Width="90"/>
                                    <TextBox Text="{Binding Equipment, Mode=TwoWay}" Width="150"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Törlés" Width="100" Margin="5" Click="DeleteEvents_Click" Background="#c841c6" Foreground="White"/>
                <Button Content="Módosítás" Width="100" Margin="5" Click="UpdateEvents_Click" Background="#c841c6" Foreground="White"/>
                <Button Content="Felhasználók" Width="100" Margin="5" Click="OpenUsersWindow_Click" Background="#c841c6" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>

