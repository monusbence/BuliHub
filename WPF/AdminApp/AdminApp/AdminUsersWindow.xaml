<Window x:Class="AdminApp.AdminUsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Felhasználók Admin" Height="500" Width="900" Background="#000">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Felhasználók listája:" Foreground="White" FontSize="16" Margin="0,0,0,10"/>
            <ListBox Name="UsersListBox" Background="#222" Foreground="White" BorderBrush="#c841c6" BorderThickness="1" Height="350">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Center">
                            <!-- Törlés jelölés -->
                            <CheckBox IsChecked="{Binding IsMarkedForDeletion}" Margin="5" VerticalAlignment="Center"/>
                            <!-- Szerkeszthető Name -->
                            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="120" Margin="5" />
                            <!-- Szerkeszthető Email -->
                            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Width="150" Margin="5"/>
                            <!-- Szerkeszthető BirthDate (yyyy-MM-dd) -->
                            <TextBox Text="{Binding BirthDateString, UpdateSourceTrigger=PropertyChanged}" Width="100" Margin="5"/>
                            <!-- Szerkeszthető Gender CheckBox -->
                            <CheckBox IsChecked="{Binding Gender, UpdateSourceTrigger=PropertyChanged}" Foreground="White" Content="Férfi?" Width="70" Margin="5" VerticalAlignment="Center"/>
                            <!-- Szerkeszthető City -->
                            <TextBox Text="{Binding City, UpdateSourceTrigger=PropertyChanged}" Width="100" Margin="5"/>
                            <!-- Szerkeszthető Status -->
                            <TextBox Text="{Binding Status, UpdateSourceTrigger=PropertyChanged}" Width="100" Margin="5"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Törlés" Width="100" Margin="5" Click="DeleteUsers_Click" Background="#c841c6" Foreground="White"/>
                <Button Content="Módosítás" Width="100" Margin="5" Click="UpdateUsers_Click" Background="#c841c6" Foreground="White"/>
                <Button Content="Eventek" Width="100" Margin="5" Click="OpenEventsWindow_Click" Background="#c841c6" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
